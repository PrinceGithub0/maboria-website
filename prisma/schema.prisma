generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
}
 

model User {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  passwordHash String
  role         Role     @default(client)
  tickets      Ticket[] @relation("UserTickets")
  requests     ServiceRequest[] @relation("UserServiceRequests")
  createdAt    DateTime @default(now())
}

model Ticket {
  id          String   @id @default(cuid())
  client      User     @relation("UserTickets", fields: [clientId], references: [id])
  clientId    String
  title       String
  description String
  status      TicketStatus @default(open)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  notes       String?

  @@index([clientId, status])
  @@index([status])
}

model ServiceRequest {
  id          String   @id @default(cuid())
  client      User     @relation("UserServiceRequests", fields: [clientId], references: [id])
  clientId    String
  serviceType String
  description String
  files       String?
  status      RequestStatus @default(open)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  notes       String?

  @@index([clientId, status])
  @@index([status])
}

model ContactMessage {
  id      String   @id @default(cuid())
  name    String
  email   String
  message String
  createdAt DateTime @default(now())
}

model Log {
  id        String   @id @default(cuid())
  message   String
  type      String
  createdAt DateTime @default(now())
}

enum Role {
  admin
  client
}

enum TicketStatus {
  open
  in_progress
  resolved
}

enum RequestStatus {
  open
  in_progress
  resolved
}
